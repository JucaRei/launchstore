{% extends "layout.njk" %}
{% block content %}

  <section
    class="container form">
    {# multipart enviar arquivos #}
    <form method="POST" action="/products?_method=PUT">

      <div class="header">
        <h3>Editar Produto {{ productId }}</h3>
      </div>

      <div class="fields">

        {% include 'products/fields.njk' %}
        <input 
          type="hidden"
          name="id"
          value={{product.id}}
        >

      </div>

      <button class="button edit" type="submit">Atualizar</button>

    </form> 
    <form id="form-delete" action="/products?_method=DELETE" method="post">
      <input type="hidden" name="id" value={{product.id}}>
      <button class="button delete" type="submit">Excluir</button>
    </form>

  </section>

  <script>
    const formDelete = document.querySelector("#form-delete")
    formDelete.addEventListener("submit", function(event) {
      const confirmation = confirm("Tem certeza que deseja excluir? NÃ£o pode ser desfeito!")
      if(!confirmation) {
        event.preventDefault()
      }
    })
  </script>

{% endblock content %}
